# Environment Variables for Personalized News Aggregator - Sigma Edition
# Copy this file to .env and update the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/news-aggregator

# MongoDB credentials (for production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password

# MongoDB Express credentials
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection string
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# NEWS API CONFIGURATION
# =============================================================================
# Get your API key from https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here
NEWSAPI_PAGE_SIZE=100

# Get your API key from https://open-platform.theguardian.com/
GUARDIAN_API_KEY=your-guardian-api-key-here

# Get your API key from https://developer.nytimes.com/
NYT_API_KEY=your-nyt-api-key-here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# NEWS FETCHING CONFIGURATION
# =============================================================================
# Categories to fetch (comma-separated)
FETCH_CATEGORIES=technology,business,science,health,entertainment

# Sources to fetch (comma-separated, empty for all)
FETCH_SOURCES=

# Search query for fetching (optional)
FETCH_QUERY=

# Fetch configuration
FETCH_PAGE_SIZE=50
FETCH_MAX_PAGES=3

# =============================================================================
# CRON SCHEDULES
# =============================================================================
# News fetching schedule (every 2 hours)
FETCH_NEWS_CRON=0 */2 * * *

# =============================================================================
# DATA RETENTION
# =============================================================================
# Article retention period in days
ARTICLE_RETENTION_DAYS=90

# Analytics data retention period in days
ANALYTICS_RETENTION_DAYS=90

# Saved articles tracking retention period in days
SAVED_ARTICLES_RETENTION_DAYS=365

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in seconds
CACHE_TTL_ARTICLES_LIST=300
CACHE_TTL_ARTICLE_DETAIL=600
CACHE_TTL_TRENDING_STATS=60
CACHE_TTL_USER_PROFILE=300
CACHE_TTL_SEARCH_RESULTS=180

# =============================================================================
# SECURITY
# =============================================================================
# Password hashing salt rounds
BCRYPT_SALT_ROUNDS=12

# Session configuration (if using sessions)
SESSION_SECRET=your-session-secret-key

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service configuration (for notifications)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@news-aggregator.com

# Push notification service
PUSH_NOTIFICATION_SERVICE_KEY=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_API_DOCS=true

# Enable database query logging
ENABLE_DB_QUERY_LOGGING=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Trust proxy (for reverse proxy setups)
TRUST_PROXY=false

# Enable compression
ENABLE_COMPRESSION=true

# Maximum request size
MAX_REQUEST_SIZE=10mb

# Request timeout
REQUEST_TIMEOUT=30000
